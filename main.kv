WindowManager:
    MenuWindow:
    TutorialWindow:
    StartGameWindow:
    P1GuessNumber:

<MenuWindow>:
    name: "menu"

    GridLayout:
        cols:1
        Label:
            text: "Hello World"

        Button:
            text: "Play"
            on_release:
                app.root.current = "start_game"

        Button:
            text: "How to Play"
            on_release:
                app.root.current = "tutorial"
                root.manager.transition.direction = "left"       
       

<TutorialWindow>:
    name: "tutorial"

    GridLayout:
        cols:1
        Label:
            text: "Tutorial Window"

        Button:
            text: "Back"
            on_release:
                app.root.current = "menu"
                root.manager.transition.direction = "right"
    
<StartGameWindow>
    name: "start_game"

    GridLayout:
        cols:1
        Label:
            text: "P1, select your number"

        GridLayout:
            cols:3
            Button:
                text: "0"
                on_release:
                    root.p1_btn_number(0)
                    app.root.current = "p1_guess_number"
                    root.manager.transition.direction = "left"
            Button:
                text: "5"
                on_release:
                    root.p1_btn_number(5)
                    app.root.current = "p1_guess_number"
                    root.manager.transition.direction = "left"

        Button:
            text: "Go back to menu"
            on_release:
                app.root.current = "menu"
                root.manager.transition.direction = "right"
    
<P1GuessNumber>
    name: "p1_guess_number"

    GridLayout:
        cols:1
        Label:
            text: "P1, guess the sum"

        Button:
            text: "Go back to menu"
            on_release:
                app.root.current = "menu"
                root.manager.transition.direction = "right"
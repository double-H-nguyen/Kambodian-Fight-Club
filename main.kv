<MenuWindow>
    GridLayout:
        cols:1
        Label:
            text: "Kambodian Fight Club"
            color:0,165,0,1
            font_size: 40
            
        Button:
            text: "Play"
            font_size:25
            on_release:
                app.root.current = "p1_num_1"

        Button:
            text: "How to Play"
            font_size:25
            on_release:
                app.root.current = "tutorial"
                root.manager.transition.direction = "left"

<TutorialWindow>
    GridLayout:
        cols:1
        Label:
            text: "To Play, Player 1 or Player 2 choses a number and one player guesses the total sum of both the number. Whoever has the guess right wins the game."
            text_size: self.width, None
            font_size: 20
        Button:
            text: "Back"
            font_size:25
            on_release:
                app.root.current = "menu"
                root.manager.transition.direction = "right"

<P1Num1>
    GridLayout:
        cols:1
        Label:
            text: "P1, select your number"
            font_size: 20

        GridLayout:
            cols:3
            Button:
                text: "0"
                font_size:25
                on_release:
                    app.root.store_p1_num(0)
                    app.root.current = "p1_sum"
                    root.manager.transition.direction = "left"
            Button:
                text: "5"
                font_size:25
                on_release:
                    app.root.store_p1_num(5)
                    app.root.current = "p1_sum"
                    root.manager.transition.direction = "left"

